<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand " href="#"> Gestion Des Etudiant </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Etudiant">Home <span class="sr-only">(current)</span></a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Administration" asp-action="ListRoles"> list role <span class="sr-only">(current)</span></a>
                    </li>
                }
                
                <li class="nav-item">
                    <a class="nav-link" href="#"></a>
                </li>



            </ul>
            
        </div>
        <partial name="_LoginPartial" />
    </nav>
    <div class="container mt-5  bg" >
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
