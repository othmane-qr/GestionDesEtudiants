@model IEnumerable<GestionDesEtudiants.Models.Etudiant>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">TOUS LES ETUDIANTS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id } , new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Details", "Details", new { id=item.Id } , new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id } , new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
